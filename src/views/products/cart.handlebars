<nav class="d-flex flex-column container">

    <div class="container" id="products-container">

        {{#each data.products}}
        <div class="card" style="width: 18rem;">
            <img src="{{this.product.thumbnails.[0]}}" class="card-img-top" alt="{{this.product.description}}">

            <div class="card-img-overlay aviable">
                <button type="button" class="btn btn-danger deleteOfCart"
                    data-product-id="{{this.product._id}}">Eliminar</button>
            </div>

            <div class="card-body">
                <h5 class="card-title">{{this.product.title}}</h5>
                <p class="card-text">{{this.product.description}}</p>
                <h5 class="card-title">${{this.product.price}}</h5>
                <p class="card-text">Categoria: {{this.product.category}}</p>
                <p class="card-text">
                    Stock: <span class="stock" data-product-id="{{this.product._id}}">{{this.product.stock}}</span>
                </p>

                <a href="/product/{{this.product._id}}" class="btn btn-primary">Ver m√°s</a>
            </div>
        </div>
        {{/each}}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="../js/cart.js"></script>